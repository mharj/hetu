{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2017", "dom"],
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "sourceRoot": "./src",
        "types": ["node"],
        "declaration": true,
        "removeComments": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "strict": true
    },
    "include": ["src/"],
    "exclude": ["node_modules", "**/*.spec.ts", "test/"]
}
